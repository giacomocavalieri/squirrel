import gleam/dynamic/decode
import pog

pub type QueryRow {
  QueryRow(res: Float)
}

pub fn query(
  db: pog.Connection,
) -> Result(pog.Returned(QueryRow), pog.QueryError) {
  let decoder = {
    use res <- decode.field(0, decode.float)
    decode.success(QueryRow(res:))
  }

  "select 1.1::float8 as res"
  |> pog.query
  |> pog.returning(decoder)
  |> pog.execute(db)
}

