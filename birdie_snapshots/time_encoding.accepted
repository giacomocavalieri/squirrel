import gleam/dynamic/decode
import gleam/time/calendar.{type TimeOfDay}
import pog.{type Connection}

pub type QueryRow {
  QueryRow(res: Bool)
}

pub fn query(db: Connection, arg_1: TimeOfDay) {
  let decoder = {
    use res <- decode.field(0, decode.bool)
    decode.success(QueryRow(res:))
  }

  "select true as res where $1 = '11:10:00'::time"
  |> pog.query
  |> pog.parameter(pog.calendar_time_of_day(arg_1))
  |> pog.returning(decoder)
  |> pog.execute(db)
}

