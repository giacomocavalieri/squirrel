import gleam/dynamic/decode
import pog

pub type QueryRow {
  QueryRow(res: BitArray)
}

pub fn query(db) {
  let decoder = {
    use res <- decode.field(0, decode.bit_array)
    decode.success(QueryRow(res:))
  }

  "select 'aaa'::bytea as res"
  |> pog.query
  |> pog.returning(decoder)
  |> pog.execute(db)
}
