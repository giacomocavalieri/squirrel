import gleam/dynamic/decode
import gleam/time/calendar.{type Date}
import pog.{type Connection}

pub type QueryRow {
  QueryRow(res: Bool)
}

pub fn query(db: Connection, arg_1: Date) {
  let decoder = {
    use res <- decode.field(0, decode.bool)
    decode.success(QueryRow(res:))
  }

  "select true as res where $1 = 'Jan-2-1970'::date"
  |> pog.query
  |> pog.parameter(pog.calendar_date(arg_1))
  |> pog.returning(decoder)
  |> pog.execute(db)
}

