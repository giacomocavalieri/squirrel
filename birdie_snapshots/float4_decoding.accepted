import gleam/dynamic/decode
import pog

pub type QueryRow {
  QueryRow(res: Float)
}

pub fn query(db) {
  let decoder = {
    use res <- decode.field(0, decode.float)
    decode.success(QueryRow(res:))
  }

  "select 1.1::float4 as res"
  |> pog.query
  |> pog.returning(decoder)
  |> pog.execute(db)
}
