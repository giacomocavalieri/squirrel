import gleam/dynamic/decode
import pog

pub type QueryRow {
  QueryRow(res: String)
}

pub fn query(db) {
  let decoder = {
    use res <- decode.field(0, decode.string)
    decode.success(QueryRow(res:))
  }

  "select '{\"a\": 1}'::json as res"
  |> pog.query
  |> pog.returning(decoder)
  |> pog.execute(db)
}
