import gleam/dynamic/decode
import pog

pub type QueryRow {
  QueryRow(res: Bool)
}

pub fn query(
  db: pog.Connection,
  arg_1: Bool,
) -> Result(pog.Returned(QueryRow), pog.QueryError) {
  let decoder = {
    use res <- decode.field(0, decode.bool)
    decode.success(QueryRow(res:))
  }

  "select true as res where $1 = true"
  |> pog.query
  |> pog.parameter(pog.bool(arg_1))
  |> pog.returning(decoder)
  |> pog.execute(db)
}

